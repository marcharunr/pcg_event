<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.pcg-event-monitor</string>

    <key>ProgramArguments</key>
    <array>
        <!-- 1. Python実行ファイルのフルパス -->
        <string>__PYTHON_EXECUTABLE_PATH__</string>
        <!-- 2. スクリプトファイルのフルパス -->
        <string>__SCRIPT_PATH__</string>
    </array>

    <key>WorkingDirectory</key>
    <!-- 3. スクリプトのワーキングディレクトリ -->
    <string>__WORKING_DIRECTORY__</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>
</dict>
</plist>